<div class="uk-modal"></div>
<div class= "uk-grid item">
	<div class= "uk-width-small-1-1"> 
		<div class= "uk-panel uk-panel-box uk-panel-box-secondary item_show">
			<h2><%=  @item.name %></h2><br>
			<%=  @item.description %><br>
			<p class= "item_cost"><%=  number_to_currency(@item.cost) %><p><br>
			<%=  link_to "Purchase", new_sub_order_path(item_id: @item.id), class: "uk-button" %>
			<%= link_to "Add review", new_item_review_path(item_id: @item.id), html:@item.id, class: "review_create uk-button" %>
		</div>
	</div>
</div>
	<% if @reviews %>
	<div class = "uk-grid">
		<div class= "uk-width-small-1-1 reviews"> 
			<%  @reviews.each do |review| %>
				<div class = "uk-panel uk-panel-divider">
						<%  case review.rating %>
						<%  when (4.1..5) %>
						<%=  image_tag("five.jpg", class: "review_image") %>
						<%  when (3.1..4) %>
						<%=  image_tag("four.jpg.png", class: "review_image") %>
						<%  when (2.1..3) %>
						<%=  image_tag("three.jpg.png", class: "review_image") %>
						<%  when (1.1..2) %>
						<%=  image_tag("two.png", class: "review_image") %>
						<%  else %>
						<%=  image_tag("one.png", class: "review_image") %>
						<%  end %>
						<p><%=  review.comment %></p>
				</div>
			<%  end %>
	<%  end %>
		</div>
	</div>

