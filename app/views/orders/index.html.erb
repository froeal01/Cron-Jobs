<table class = "uk-table uk-table-striped">
	<thead>
		<tr>
			<th class= "uk-width-1-3 uk-text-center uk-text-bold"> Item Name </th>
			<th class= "uk-width-1-3 uk-text-center uk-text-bold"> Quantity </th>
			<th class= "uk-width-1-3 uk-text-center uk-text-bold"> Item Cost </th>
		</tr>
	</thead>
	<tbody>
		<%  @items_in_order.each do |cart_item|  %>
			<tr>
		 		<td class = "uk-width-1-3 uk-text-center"><%= cart_item.item.name %></td>
		 		<td class = "uk-width-1-3 uk-text-center"><%= cart_item.quantity %></td>
		 		<td class = "uk-width-1-3 uk-text-center"><%= number_to_currency(cart_item.cost)%></td>
		 	</tr>
		<%  end %>
			<tr class = "total_table">
			 <td class = "uk-width-1-3 uk-text-center uk-text-bold">Total</td>
			 <td class = "uk-width-1-3 uk-text-center uk-text-bold"><%=  @total_quantity %></td>
			 <td class = "uk-width-1-3 uk-text-center uk-text-bold"><%= number_to_currency(@total_cost) %></td>
			<tr>
	</tbody>
</table>
<div class = "uk-grid">
	<div class ="uk-width-small-1-1 spacer">
		<%=  link_to "Checkout", checkout_path, :class => "uk-button uk-button-primary" %>
	</div>
</div>